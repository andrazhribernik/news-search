<?php
function toUtf($str) {
  $old = "windows-1250";
  $new = "UTF-8";
  return iconv($old, $new, $str);
}

function to1250($str) {
  $old = "UTF-8";
  $new = "windows-1250";
  return iconv($old, $new, $str);  
}

function arrayToUtf($arr) {
  foreach ($arr as &$value) {
    $value = toUtf($value);
  }
}
?>